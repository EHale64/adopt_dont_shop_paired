<h1>Edit Review</h1>

<%= form_tag "/reviews/#{@review.id}", method: :patch do %>
  <%= label_tag :title %>
  <%= text_field_tag :title, @review.title %>
  <%= label_tag :content %>
  <%= text_field_tag :content, @review.content %>
  <%= label_tag :picture, 'Picture (optional)' %>
  <%= text_field_tag :picture, @review.picture %>
  <br>
  <br>
  <%= label_tag :rating %>
  <%= select_tag :rating, options_for_select([[1], [2], [3], [4], [5]], id: 'rating') %>
  <br>
  <br>
  <%= submit_tag 'Update Review' %>
<% end %>

<% flash.each do |_, message|  %>
  <%= message %>
<% end %>
