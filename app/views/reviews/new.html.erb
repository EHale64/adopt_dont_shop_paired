<h1>Add Review</h1>

<%= form_tag "/shelters/#{@shelter_id}", method: :post do %>
  <%= label_tag :title %>
  <%= text_field_tag :title %>
  <%= label_tag :content %>
  <%= text_field_tag :content %>
  <%= label_tag :picture, 'Picture (optional)' %>
  <%= text_field_tag :picture %>
  <br>
  <br>
  <%= label_tag :rating %>
  <%= select_tag :rating, options_for_select([[1], [2], [3], [4], [5]], id: 'rating') %>
  <br>
  <br>
  <%= submit_tag 'Submit Review' %>
<% end %>
<%= render partial: '/partials/flash_message' %>
